#!/bin/sh

prefix="/usr/local"
monocypher="/usr/local"
braid="/usr/local"
cc=${CC:-cc}

usage() {
  cat <<EOF
usage: $0 [OPTIONS]

options:
  --cc=CC              C compiler (default: $cc)
  --prefix=PREFIX     installation prefix (default: $prefix)
  --monocypher=PATH   path to monocypher (default: $monocypher)
  --braid=PATH        path to braid (default: $braid)
  --help              display this help message
EOF
  exit 0
}

for arg in "$@"; do
  case $arg in
    --prefix=*) prefix="${arg#*=}" ;;
    --cc=*) cc="${arg#*=}" ;;
    --monocypher=*) monocypher="${arg#*=}" ;;
    --braid=*) braid="${arg#*=}" ;;
    --help) usage ;;
    *) echo "Unknown option: $arg" ; usage ;;
  esac
done

# sanity checks

printf "Checking for libbraid... "

if [ -f "$braid/lib/pkgconfig/libbraid.pc" ]; then
  printf "found\n"
  export PKG_CONFIG_PATH="$PKG_CONFIG_PATH:$braid/lib/pkgconfig"
else
  printf "not found\n"
  exit 1
fi

printf "Checking for monocypher... "

if [ -f "$monocypher/lib/pkgconfig/monocypher.pc" ]; then
  printf "found\n"
  export PKG_CONFIG_PATH="$PKG_CONFIG_PATH:$monocypher/lib/pkgconfig"
else
  printf "not found\n"
  exit 1
fi

printf "Checking for SO_LINGER support... "

cat > /tmp/lingertest.c <<EOF
#include <sys/types.h>
#include <sys/socket.h>
#include <netinet/in.h>

int main(void) {
  int opt = SO_LINGER;
  (void)opt;
  return 0;
}
EOF

if $cc -o /tmp/lingertest /tmp/lingertest.c 2>/dev/null; then
  rm -f /tmp/lingertest.c /tmp/lingertest
  printf "yes\n"
else
  printf "no\n"
  exit 1
fi

# create config.mk

cat > config.mk <<EOF
PREFIX := $prefix
CC := $cc
MONOCYPHER_CFLAGS := $(pkg-config --cflags monocypher)
MONOCYPHER_LDFLAGS := $(pkg-config --libs monocypher)
BRAID_CFLAGS := $(pkg-config --cflags libbraid)
BRAID_LDFLAGS := $(pkg-config --libs libbraid)
EOF

